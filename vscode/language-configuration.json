{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "\"\"\"", "close": "\"\"\"" }
  ],
  "autoCloseBefore": ";:.,=|)> \n\t",
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "\\(",
      "end": "\\)"
    }
  },
  "wordPattern": "[a-zA-Z][a-zA-Z0-9-]*\\??",
  "indentationRules": {
    "increaseIndentPattern": "^.*\\(\\s*$",
    "decreaseIndentPattern": "^\\s*\\)"
  },
  "onEnterRules": [
    {
      "beforeText": "^.*\\(\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*\\)",
      "action": { "indent": "outdent" }
    }
  ]
}
