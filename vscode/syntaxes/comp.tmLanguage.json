{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Comp",
  "scopeName": "source.comp",
  "patterns": [
    { "include": "#module-frontmatter" },
    { "include": "#main" }
  ],
  "repository": {
    "module-frontmatter": {
      "comment": "Module-level frontmatter: prose text at start of file until ---. File must start with a letter (not code characters)",
      "name": "meta.frontmatter.module.comp",
      "begin": "\\A(?=[A-Za-z])",
      "end": "(---)",
      "endCaptures": {
        "1": { "name": "punctuation.separator.frontmatter.comp" }
      },
      "contentName": "comment.block.documentation.frontmatter.comp"
    },

    "main": {
      "patterns": [
        { "include": "#comment" },
        { "include": "#string-triple" },
        { "include": "#string-double" },
        { "include": "#frontmatter-separator" },
        { "include": "#block" },
        { "include": "#directive" },
        { "include": "#parameter" },
        { "include": "#tag" },
        { "include": "#number" },
        { "include": "#pipe-operator" },
        { "include": "#assignment-operator" },
        { "include": "#operator" },
        { "include": "#function-call" },
        { "include": "#field-access" },
        { "include": "#identifier" }
      ]
    },

    "frontmatter-separator": {
      "comment": "Frontmatter separator ---",
      "name": "punctuation.separator.frontmatter.comp",
      "match": "---"
    },

    "comment": {
      "name": "comment.line.semicolon.comp",
      "match": ";.*$"
    },

    "string-triple": {
      "name": "string.quoted.triple.comp",
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "patterns": [
        { "include": "#string-interpolation" }
      ]
    },

    "string-double": {
      "name": "string.quoted.double.comp",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "include": "#string-interpolation" },
        { "include": "#string-escape" }
      ]
    },

    "string-interpolation": {
      "name": "meta.interpolation.comp",
      "begin": "\\$\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.interpolation.begin.comp" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.interpolation.end.comp" }
      },
      "contentName": "meta.embedded.expression.comp",
      "patterns": [
        { "include": "#main" }
      ]
    },

    "string-escape": {
      "name": "constant.character.escape.comp",
      "match": "\\\\."
    },

    "block": {
      "comment": "Parenthesized block - check for frontmatter patterns",
      "patterns": [
        {
          "comment": "Block with opening frontmatter delimiter: (--- ... ---",
          "name": "meta.block.with-frontmatter.comp",
          "begin": "(\\()(---)",
          "end": "(\\))",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.block.begin.comp" },
            "2": { "name": "punctuation.separator.frontmatter.comp" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.comp" }
          },
          "patterns": [
            {
              "comment": "Frontmatter content until closing ---",
              "begin": "(?<=---)",
              "end": "(---)",
              "endCaptures": {
                "1": { "name": "punctuation.separator.frontmatter.comp" }
              },
              "contentName": "comment.block.documentation.frontmatter.comp"
            },
            { "include": "#main" }
          ]
        },
        {
          "comment": "Block with inline frontmatter: (text --- code) on same line, not starting with |",
          "name": "meta.block.with-frontmatter.comp",
          "begin": "(\\()(?=\\s*[^|()\\s][^()]*---)",
          "end": "(\\))",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.block.begin.comp" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.comp" }
          },
          "patterns": [
            {
              "comment": "Frontmatter content before ---",
              "begin": "(?<=\\()",
              "end": "(---)",
              "endCaptures": {
                "1": { "name": "punctuation.separator.frontmatter.comp" }
              },
              "contentName": "comment.block.documentation.frontmatter.comp"
            },
            { "include": "#main" }
          ]
        },
        {
          "comment": "Block without frontmatter",
          "name": "meta.block.comp",
          "begin": "(\\()",
          "end": "(\\))",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.block.begin.comp" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.comp" }
          },
          "patterns": [
            { "include": "#main" }
          ]
        }
      ]
    },

    "directive": {
      "comment": "Directives like !transact, !pure, !entry",
      "name": "keyword.control.directive.comp",
      "match": "![a-zA-Z][a-zA-Z0-9-]*"
    },

    "parameter": {
      "comment": "Parameter declarations like :arg~type",
      "name": "meta.parameter.comp",
      "match": "(:)([a-zA-Z][a-zA-Z0-9-]*\\??)(~)([a-zA-Z][a-zA-Z0-9-]*\\??)?",
      "captures": {
        "1": { "name": "punctuation.definition.parameter.comp" },
        "2": { "name": "variable.parameter.comp" },
        "3": { "name": "punctuation.separator.type.comp" },
        "4": { "name": "entity.name.type.comp" }
      }
    },

    "tag": {
      "comment": "Tags like ~text, ~num, ~nil",
      "name": "meta.tag.comp",
      "match": "(~)([a-zA-Z][a-zA-Z0-9-]*\\??)",
      "captures": {
        "1": { "name": "punctuation.definition.tag.comp" },
        "2": { "name": "entity.name.tag.comp" }
      }
    },

    "number": {
      "patterns": [
        {
          "comment": "Number with unit like 1~week",
          "name": "meta.number-with-unit.comp",
          "match": "([0-9]+\\.?[0-9]*)(~)([a-zA-Z][a-zA-Z0-9-]*)",
          "captures": {
            "1": { "name": "constant.numeric.comp" },
            "2": { "name": "punctuation.separator.unit.comp" },
            "3": { "name": "constant.other.unit.comp" }
          }
        },
        {
          "comment": "Decimal number",
          "name": "constant.numeric.comp",
          "match": "[0-9]+\\.[0-9]+"
        },
        {
          "comment": "Integer",
          "name": "constant.numeric.comp",
          "match": "[0-9]+"
        }
      ]
    },



    "pipe-operator": {
      "comment": "Pipe operator | - control flow",
      "name": "keyword.control.pipe.comp",
      "match": "\\|(?![|=])"
    },

    "assignment-operator": {
      "comment": "Assignment operator = - control flow",
      "name": "keyword.control.assignment.comp",
      "match": "=(?!=)"
    },

    "operator": {
      "patterns": [
        {
          "comment": "Comparison operators",
          "name": "keyword.operator.comparison.comp",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "comment": "Arithmetic operators",
          "name": "keyword.operator.arithmetic.comp",
          "match": "\\+|-|\\*|/"
        },
        {
          "comment": "Logical operators",
          "name": "keyword.operator.logical.comp",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },

    "function-call": {
      "comment": "Function calls like name() or namespace.name()",
      "name": "meta.function-call.comp",
      "match": "([a-zA-Z][a-zA-Z0-9-]*(?:\\.[a-zA-Z][a-zA-Z0-9-]*)*)(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.comp" }
      }
    },

    "field-access": {
      "comment": "Field/namespace access like obj.field or var.name",
      "match": "([a-zA-Z][a-zA-Z0-9-]*\\??)(\\.)",
      "captures": {
        "1": { "name": "variable.other.object.comp" },
        "2": { "name": "punctuation.accessor.comp" }
      }
    },

    "identifier": {
      "comment": "Regular identifiers with kebab-case and optional trailing ?",
      "name": "variable.other.comp",
      "match": "[a-zA-Z][a-zA-Z0-9-]*\\??"
    }
  }
}
