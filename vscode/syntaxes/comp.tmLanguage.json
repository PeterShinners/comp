{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Comp",
  "scopeName": "source.comp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#module-declarations" },
    { "include": "#signature-operators" },
    { "include": "#block-operators" },
    { "include": "#wrappers" },
    { "include": "#parameter-prefix" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#input-references" },
    { "include": "#tags" },
    { "include": "#operators" },
    { "include": "#type-names" },
    { "include": "#function-calls" }
  ],
  "repository": {

    "comments": {
      "patterns": [
        {
          "comment": "Block documentation comment /** */",
          "name": "comment.block.documentation.comp",
          "begin": "/\\*\\*(?!/)",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.comp" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.comp" } },
          "patterns": [{ "include": "#comments" }]
        },
        {
          "comment": "Block comment /* */ with nesting",
          "name": "comment.block.comp",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.comp" } },
          "endCaptures": { "0": { "name": "punctuation.definition.comment.comp" } },
          "patterns": [{ "include": "#comments" }]
        },
        {
          "name": "comment.line.documentation.comp",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.comp",
          "match": "//.*$"
        }
      ]
    },

    "module-declarations": {
      "patterns": [
        {
          "comment": "!import name",
          "match": "(!import)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "keyword.control.import.comp" },
            "2": { "name": "entity.name.namespace.comp" }
          }
        },
        {
          "comment": "!func/!pure name ~type — function with optional input shape",
          "match": "(!(func|pure))\\s+([a-zA-Z_][a-zA-Z0-9_?-]*&?)\\s*(~[a-zA-Z_][a-zA-Z0-9_|-]*)?",
          "captures": {
            "1": { "name": "keyword.declaration.function.comp" },
            "3": { "name": "entity.name.function.comp" },
            "4": { "name": "storage.type.comp" }
          }
        },
        {
          "comment": "!startup name",
          "match": "(!startup)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "keyword.declaration.function.comp" },
            "2": { "name": "entity.name.function.comp" }
          }
        },
        {
          "comment": "!shape name",
          "match": "(!shape)\\s+([a-zA-Z_][a-zA-Z0-9_-]*&?)",
          "captures": {
            "1": { "name": "keyword.declaration.type.comp" },
            "2": { "name": "entity.name.type.comp" }
          }
        },
        {
          "comment": "!tag name",
          "match": "(!tag)\\s+([a-zA-Z_][a-zA-Z0-9_.-]*&?)",
          "captures": {
            "1": { "name": "keyword.declaration.type.comp" },
            "2": { "name": "entity.name.type.comp" }
          }
        },
        {
          "comment": "!alias name — namespace alias",
          "match": "(!alias)\\s+([a-zA-Z_][a-zA-Z0-9_-]*&?)\\s+([a-zA-Z_][a-zA-Z0-9_.-]*)",
          "captures": {
            "1": { "name": "keyword.declaration.module.comp" },
            "2": { "name": "entity.name.tag.comp" },
            "3": { "name": "entity.name.namespace.comp" }
          }
        },
        {
          "comment": "!mod name",
          "match": "(!mod)\\s+([a-zA-Z_][a-zA-Z0-9_.-]*)",
          "captures": {
            "1": { "name": "keyword.declaration.module.comp" },
            "2": { "name": "entity.name.namespace.comp" }
          }
        },
        {
          "comment": "!package name version",
          "match": "(!package)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)\\s+(\"[^\"]*\")",
          "captures": {
            "1": { "name": "keyword.declaration.module.comp" },
            "2": { "name": "entity.name.tag.comp" },
            "3": { "name": "string.quoted.double.comp" }
          }
        },
        {
          "comment": "!context name",
          "match": "(!context)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "keyword.declaration.function.comp" },
            "2": { "name": "entity.name.function.comp" }
          }
        }
      ]
    },

    "signature-operators": {
      "patterns": [
        {
          "comment": ":param — individual parameter declaration",
          "match": "(:param)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)(~[a-zA-Z_][a-zA-Z0-9_|-]*)?",
          "captures": {
            "1": { "name": "keyword.other.param.comp" },
            "2": { "name": "variable.parameter.comp" },
            "3": { "name": "storage.type.comp" }
          }
        },
        {
          "comment": ":params — shape-matched parameter group",
          "match": "(:params)\\s*(~[a-zA-Z_][a-zA-Z0-9_|-]*)?",
          "captures": {
            "1": { "name": "keyword.other.params.comp" },
            "2": { "name": "storage.type.comp" }
          }
        },
        {
          "comment": ":block — deferred block parameter declaration",
          "match": "(:block)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)(~[a-zA-Z_][a-zA-Z0-9_|-]*)?",
          "captures": {
            "1": { "name": "keyword.other.block.comp" },
            "2": { "name": "variable.parameter.comp" },
            "3": { "name": "storage.type.comp" }
          }
        }
      ]
    },

    "block-operators": {
      "patterns": [
        {
          "comment": "!on — dispatch operator",
          "name": "keyword.control.dispatch.comp",
          "match": "!on\\b"
        },
        {
          "comment": "!let — local binding",
          "name": "keyword.control.let.comp",
          "match": "!let\\b"
        },
        {
          "comment": "!defer — prevent automatic invocation",
          "name": "keyword.control.defer.comp",
          "match": "!defer\\b"
        },
        {
          "comment": "!fail — raise failure value",
          "name": "keyword.control.fail.comp",
          "match": "!fail\\b"
        },
        {
          "comment": "!ctx — context binding",
          "name": "keyword.other.ctx.comp",
          "match": "!ctx\\b"
        },
        {
          "comment": "!transact — transaction block",
          "name": "keyword.control.transact.comp",
          "match": "!transact\\b"
        },
        {
          "comment": "Catch-all for any !operator not listed above",
          "name": "keyword.other.bang.comp",
          "match": "![a-zA-Z][a-zA-Z0-9-]*\\b"
        }
      ]
    },

    "wrappers": {
      "patterns": [
        {
          "comment": "@wrapper on blocks/expressions",
          "name": "meta.wrapper.comp",
          "match": "(@)([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "punctuation.definition.wrapper.comp" },
            "2": { "name": "entity.name.function.wrapper.comp" }
          }
        }
      ]
    },

    "parameter-prefix": {
      "patterns": [
        {
          "comment": ":name=value — named parameter at call site",
          "match": "(:)([a-zA-Z_][a-zA-Z0-9_-]*)(=)",
          "captures": {
            "1": { "name": "punctuation.definition.parameter.comp" },
            "2": { "name": "variable.parameter.comp" },
            "3": { "name": "keyword.operator.assignment.comp" }
          }
        },
        {
          "comment": ": — positional parameter prefix at call site",
          "match": "(:)(?=[\\(\\{\"$0-9a-zA-Z_~!])",
          "captures": {
            "1": { "name": "punctuation.definition.parameter.comp" }
          }
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "comment": "Triple-quoted multiline string",
          "name": "string.quoted.double.multiline.comp",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.comp" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.comp" } },
          "patterns": [
            { "include": "#string-interpolation" },
            {
              "name": "constant.character.escape.comp",
              "match": "\\\\[\\\\\"nrt0]"
            }
          ]
        },
        {
          "name": "string.quoted.double.comp",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.comp" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.comp" } },
          "patterns": [
            { "include": "#string-interpolation" },
            {
              "name": "constant.character.escape.comp",
              "match": "\\\\[\\\\\"nrt0]"
            }
          ]
        }
      ]
    },

    "string-interpolation": {
      "patterns": [
        {
          "comment": "Escaped percent — literal %(",
          "name": "constant.character.escape.comp",
          "match": "%%\\("
        },
        {
          "comment": "String interpolation %(expr) with optional [format]",
          "name": "meta.interpolation.comp",
          "begin": "%\\(",
          "end": "\\)(\\[[^\\]]*\\])?",
          "beginCaptures": { "0": { "name": "punctuation.section.interpolation.begin.comp" } },
          "endCaptures": {
            "0": { "name": "punctuation.section.interpolation.end.comp" },
            "1": { "name": "string.interpolation.format.comp" }
          },
          "contentName": "source.comp.embedded",
          "patterns": [
            { "include": "#input-references" },
            { "include": "#operators" },
            { "include": "#numbers" },
            { "include": "#constants" },
            { "include": "#function-calls" }
          ]
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "comment": "Hex literal",
          "name": "constant.numeric.hex.comp",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "comment": "Binary literal",
          "name": "constant.numeric.binary.comp",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "comment": "Octal literal",
          "name": "constant.numeric.octal.comp",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "comment": "Float or integer with optional unit [unit]",
          "name": "constant.numeric.comp",
          "match": "\\b\\d[\\d_]*(\\.[\\d_]+)?([eE][+-]?\\d+)?(\\[[a-zA-Z_][a-zA-Z0-9_-]*\\])?\\b"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "comment": "Boolean and nil constants",
          "name": "constant.language.comp",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "comment": "Stream control tags",
          "name": "constant.language.stream.comp",
          "match": "\\b(done|skip|pass)\\b"
        }
      ]
    },

    "input-references": {
      "patterns": [
        {
          "comment": "$$ — outer scope input with optional field access",
          "name": "variable.language.outer-input.comp",
          "match": "\\$\\$[a-zA-Z_][a-zA-Z0-9_-]*(\\.[a-zA-Z_][a-zA-Z0-9_-]*)*"
        },
        {
          "comment": "$$ — bare outer scope input",
          "name": "variable.language.outer-input.comp",
          "match": "\\$\\$(?![a-zA-Z_])"
        },
        {
          "comment": "$field — input field access (no dot needed)",
          "name": "variable.language.input.comp",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_-]*(\\.[a-zA-Z_][a-zA-Z0-9_-]*)*"
        },
        {
          "comment": "$ — bare pipeline input",
          "name": "variable.language.input.comp",
          "match": "\\$(?![a-zA-Z_$])"
        }
      ]
    },

    "tags": {
      "patterns": [
        {
          "comment": "~tag — type tag / shape reference",
          "name": "storage.type.comp",
          "match": "~[a-zA-Z_][a-zA-Z0-9_|-]*"
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "comment": "Pipeline fallback operator |?",
          "name": "keyword.operator.fallback.comp",
          "match": "\\|\\?"
        },
        {
          "comment": "Pipeline operator",
          "name": "keyword.operator.pipeline.comp",
          "match": "\\|(?!\\?)"
        },
        {
          "comment": "Value fallback operator ??",
          "name": "keyword.operator.fallback.value.comp",
          "match": "\\?\\?"
        },
        {
          "comment": "Three-way comparison <> operator",
          "name": "keyword.operator.comparison.threeway.comp",
          "match": "<>"
        },
        {
          "comment": "Comparison operators",
          "name": "keyword.operator.comparison.comp",
          "match": "==|!=|<=|>=|(?<!<)<(?!>)|(?<!<)>(?!>)"
        },
        {
          "comment": "Logical operators",
          "name": "keyword.operator.logical.comp",
          "match": "&&|\\|\\||!!"
        },
        {
          "comment": "Assignment",
          "name": "keyword.operator.assignment.comp",
          "match": "="
        },
        {
          "comment": "Arithmetic",
          "name": "keyword.operator.arithmetic.comp",
          "match": "\\+|-|\\*|/|%(?!\\()"
        },
        {
          "comment": "Range operator",
          "name": "keyword.operator.range.comp",
          "match": "\\.\\."
        },
        {
          "comment": "Field access dot",
          "name": "punctuation.accessor.comp",
          "match": "\\.(?!\\d|\\.)"
        }
      ]
    },

    "type-names": {
      "patterns": [
        {
          "comment": "Built-in type names",
          "name": "support.type.comp",
          "match": "\\b(text|num|int|bool|struct|datetime|any)\\b"
        }
      ]
    },

    "function-calls": {
      "patterns": [
        {
          "comment": "Dotted function call — module.function",
          "name": "entity.name.function.comp",
          "match": "[a-zA-Z_][a-zA-Z0-9_-]*\\.[a-zA-Z_][a-zA-Z0-9_.-]*(?=\\s*[:\\(\\{])"
        },
        {
          "comment": "Function call — identifier followed by : ( or {",
          "name": "entity.name.function.comp",
          "match": "[a-zA-Z_][a-zA-Z0-9_?-]*(?=\\s*[:\\(\\{])"
        }
      ]
    }
  }
}